# vi: ft=yaml

system:
 skip: true
 cmd:
   init: system('sudo pacman -S $(cat ~/GIT/configure/pkglist)')
   update: system('sudo yaourt -Suy --aur')

rubygems:
 skip: true
 autorun: 'cd /usr/lib/ruby/gems/1.8/specifications/; sudo rm dm-*0.10.*' # remove datamapper 0.10.* series
 cmd:
   init: system('sudo gem install $(cat ~/GIT/configure/gemlist)')
   update: system('sudo gem update; cd /usr/lib/ruby/gems/1.8/specifications/; sudo rm dm-*0.10.*')
