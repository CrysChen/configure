# vi:ft=sh

# PROMPT
case ${TERM} in
  xterm*|rxvt*|Eterm|aterm|kterm|gnome*)
  PROMPT_COMMAND='echo -ne "\033]0;${PWD/$HOME/~}\007"'
  ;;
  screen)
  PROMPT_COMMAND='echo -ne "\033_${PWD/$HOME/~}\033\\"'
  ;;
esac

# set a fancy prompt (non-color, unless we know we "want" color)

function parse_git_branch() {
  GIT_BRANCH=`git branch 2> /dev/null | grep '^\*' | sed 's/^\*\ //'`
  if [ "$GIT_BRANCH" ] ; then
    GIT_STATUS=`git status 2> /dev/null`
    CLR='2'
    if [ "`echo $GIT_STATUS | grep 'Changed but not updated'`" ] ; then
      CLR='1'
    fi

    pt=`echo $GIT_STATUS | grep 'Your branch is ahead' | awk {'print $13'}`
    if [ "${pt}" ] ; then
      PTIMES=" ${pt} â†‘ "
    else
      PTIMES=""
    fi

    RSLT="\e[01;3${CLR};40m[${GIT_BRANCH}${PTIMES}]\e[0m"
  fi
  echo -e "${RSLT}"
}

